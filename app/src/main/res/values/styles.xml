<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/covr_green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>

        <!--disable multitouch-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="AppTheme.NoActionBar.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Widget" />

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">@string/cfg_font_roboto_regular</item>
    </style>

    <style name="FullScreenDialogStyle">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="GreenButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/button_green_text</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:paddingLeft">@dimen/about_sections_padding_top_bottom</item>
        <item name="android:paddingRight">@dimen/about_sections_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/view_padding_small</item>
        <item name="android:paddingBottom">@dimen/view_padding_small</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="KeyboardButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/keyboard_text_bg</item>
        <item name="android:background">@drawable/keyboard_button_bg</item>
        <item name="android:textSize">@dimen/keyboard_text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/keyboard_text_margin</item>
        <item name="android:layout_marginRight">@dimen/keyboard_text_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="KeyboardRowStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InfoTextStyle">
        <item name="android:textColor">@color/clickable_text</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="PersonalCodeStyle">
        <item name="android:textColor">@color/keyboard_text_bg</item>
        <item name="android:background">@drawable/personal_code_bg</item>
        <item name="android:textSize">8sp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PersonalCodeRowStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WhiteBottomButton">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@drawable/selector_btn_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="RequestBottomButton" parent="WhiteBottomButton">
        <item name="android:textColor">@drawable/request_bottom_button_text_selector</item>
        <item name="android:background">@drawable/request_bottom_button_background_selector</item>
        <item name="android:textSize">@dimen/text_request_button</item>
    </style>

    <style name="GreenTitleStyle">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">@color/clickable_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="WhiteTitleStyle">
        <item name="android:textSize">@dimen/text_toolbar_header</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WhiteToolbarStyle">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GreenToolbarStyle">
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:textColor">@color/covr_green</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GreenToolbarTitleStyle">
        <item name="android:textSize">@dimen/text_toolbar_header</item>
        <item name="android:textColor">@color/covr_green</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PhoneNumberTextViewStyle">
        <item name="android:textSize">@dimen/text_regular_dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerificationCodeDigitWrapper">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerificationCodeDigit">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:background">@drawable/verification_code_digit_filled</item>
        <item name="android:layout_width">@dimen/enter_verification_view_code_digit_wrapper_size
        </item>
        <item name="android:layout_height">@dimen/enter_verification_view_code_digit_wrapper_size
        </item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AboutSectionStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/setting_item_margin_top</item>
    </style>

    <style name="AboutTextSwitchContainerStyle" parent="AboutTextContainerStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AboutTextContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/about_sections_padding_left_rigth</item>
        <item name="android:paddingRight">@dimen/about_sections_padding_left_rigth</item>
        <item name="android:paddingBottom">@dimen/about_sections_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/about_sections_padding_top_bottom</item>
    </style>

    <style name="AboutMainTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_toolbar_header</item>
    </style>

    <style name="SettingName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="AboutLineSeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="SettingsSwitchStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ChangeCodeTextStyle">
        <item name="android:textColor">@color/setting_header_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/view_padding_normal</item>
        <item name="android:textSize">@dimen/text_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChangeCodeHeaderStyle" parent="ChangeCodeTextStyle">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">@color/covr_green</item>
    </style>

    <style name="PartnershipTitleText">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="RecyclerViewEdgeColor">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="payment_card_edit_header" parent="payment_card_edit_abstract">
        <item name="android:background">@color/off_tealish_2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_ultra_small</item>
    </style>

    <style name="payment_card_edit_edit_text" parent="payment_card_edit_abstract">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColor">@color/covr_vault_text_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="payment_card_edit_abstract">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">22dp</item>
    </style>

    <style name="payment_card_edit_information_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="payment_card_edit_information_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:minWidth">108dp</item>
        <item name="android:textColor">@color/greeting_text_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="payment_card_edit_information_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/covr_vault_text_black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="payment_card_edit_information_divider" parent="AboutLineSeparatorStyle">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="covr_vault_divider" parent="AboutLineSeparatorStyle">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="covr_vault_view_card_style_paramount" parent="covr_vault_view_card_style">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="covr_vault_view_card_style">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/covr_vault_text_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="covr_vault_view_card_title_style" parent="covr_vault_view_card_style">
        <item name="android:textColor">@color/soft_green</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="covr_vault_view_card_bottom_panel_image_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">28dp</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="covr_vault_view_card_bottom_panel_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/covr_green</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="covr_vault_view_card_action_image_style">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>
