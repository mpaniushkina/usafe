        <Button
            android:id="@+id/capture"
            style="@style/GreenButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="170dp"
            android:text="@string/capture"
            android:elevation="0dp"
