<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tutor_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/twenty_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir"
        android:textSize="@dimen/text_header_small"
        tools:text="2" />

    <TextView
        android:id="@+id/tutorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir"
        android:textSize="@dimen/text_header_small"
        tools:text="3" />

    <TextView
        android:id="@+id/tutor_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/tutorTitle"
        android:layout_marginBottom="@dimen/personal_code_info_margin_bottom"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir"
        android:textSize="@dimen/text_small"
        tools:text="1" />

    <TextView
        android:id="@+id/enter_new_code"
        style="@style/InfoTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutor_text"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/ten_dp"
        android:gravity="center_horizontal"
        android:text="@string/backup_and_enter"
        android:visibility="visible" />

</LinearLayout>