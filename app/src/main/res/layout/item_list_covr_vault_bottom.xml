<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="60dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_covr_vault_bottom_list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/category_icon_note_medium" />

    <TextView
        android:id="@+id/item_covr_vault_bottom_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_covr_vault_bottom_list_icon"
        android:layout_marginBottom="9dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="2"
        android:maxLines="2"
        android:textColor="@color/covr_vault_text_black"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        tools:text=" card" />

</RelativeLayout>
