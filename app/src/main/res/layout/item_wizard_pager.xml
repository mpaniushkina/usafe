<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:background="@color/grey">

    <TextView
        android:id="@+id/texDescription1"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/wizard_header"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_header_small"
        tools:text="Take control of your own data, with iAM you decide" />

    <TextView
        android:id="@+id/texDescription2"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texDescription1"
        android:layout_marginTop="@dimen/setting_item_margin_top"
        android:paddingStart="@dimen/code_displayer_right_margin"
        android:paddingEnd="@dimen/code_displayer_right_margin"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/greeting_text_small"
        tools:text="Take control of your own data, with iAM you decide" />

    <TextView
        android:id="@+id/texDescription3"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texDescription2"
        android:layout_marginTop="@dimen/twenty_dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:paddingStart="@dimen/code_displayer_right_margin"
        android:paddingEnd="@dimen/code_displayer_right_margin"
        android:textColor="@color/white"
        android:textSize="@dimen/greeting_text_small"
        tools:text="Take control of your own data, with iAM you decide" />


</RelativeLayout>