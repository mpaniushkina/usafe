<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/covr_vault_view_card_bottom_panel_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_button_height"
        android:layout_gravity="bottom"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/covr_vault_left_bottom_button"
            style="@style/WhiteBottomButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/covr_vault_view_card_open_string" />

        <View
            android:layout_width="@dimen/border_line_thin_thickness"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/covr_vault_right_bottom_button"
            style="@style/WhiteBottomButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/close" />

    </LinearLayout>

</layout>
